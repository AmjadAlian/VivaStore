@model ResetPasswordVM
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<style>
    .login__button{
        margin-bottom:0;
        margin-top:20px;
    }
</style>

<div class="login">
    <img src="~/images/blob-scene-haikei.png" alt="login image" class="login__img">

    <form asp-action="ResetPassword" asp-controller="Account" class="container">
        <h1 class="login__title">Forgot Password</h1>

        <div class="login__content">
            <div class="login__box">
                <i class="ri-user-3-line login__icon"></i>

                <div class="login__box-input">
                    <input asp-for="NewPassword" class="login__input" placeholder=" ">
                    <label asp-for="NewPassword" class="login__label"></label>
                </div>
            </div>


            <div class="login__content">
                <div class="login__box">
                    <i class="ri-user-3-line login__icon"></i>

                    <div class="login__box-input">
                        <input asp-for="ConfirmPassword" class="login__input" placeholder=" ">
                        <label asp-for="ConfirmPassword" class="login__label"></label>
                    </div>
                </div>

                <input asp-for="Email" type="hidden" />
                <input asp-for="Token" type="hidden" />
            <button type="submit" class="login__button">Confirm</button>

         
    </form>
</div>
