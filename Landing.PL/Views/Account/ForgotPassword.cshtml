@model ForgotPasswordVM
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<style>
    .login__button{
        margin:0;
    }
</style>

<div class="login">
    <img src="~/images/blob-scene-haikei.png" alt="login image" class="login__img">

    <form asp-action ="SendPasswordUrl" asp-controller="Account" class="container">
        <h1 class="login__title">Forgot Password</h1>

        <div class="login__content">
            <div class="login__box">
                <i class="ri-user-3-line login__icon"></i>

                <div class="login__box-input">
                    <input asp-for="Email" class="login__input" placeholder=" ">
                    <label asp-for="Email" class="login__label"></label>
                </div>
            </div>

       

    
        <button type="submit" class="login__button">Send Email</button>

        <p class="login__register">
             <a asp-action="Login" asp-controller="Account">Back to login</a>
        </p>
    </form>
</div>

