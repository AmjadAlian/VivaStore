@model LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

    <style>
        .mulitForm-group{
            display:flex;
            justify-content:space-between;
            align-items:center;
            margin-bottom:25px;
        }
        .m-0{
            margin:0;
        }
        .forgotPassword a{
            color:#222;
        }
        
    </style>


<!-- Sing in  Form -->
<div class="login">
    <img src="~/images/blob-scene-haikei.png" alt="login image" class="login__img">

    <form asp-action="Login" asp-controller="Account" class="container">
        <h1 class="login__title">Login</h1>

        <div class="login__content">
            <div class="login__box">
                <i class="ri-user-3-line login__icon"></i>

                <div class="login__box-input">
                    <input asp-for="Email"  class="login__input"  placeholder=" ">
                    <label asp-for="Email"  class="login__label">Email</label>
                </div>
            </div>

            <div class="login__box">
                <i class="ri-lock-2-line login__icon"></i>

                <div class="login__box-input">
                    <input asp-for=Password class="login__input"  placeholder=" ">
                    <label asp-for="Password" class="login__label">Password</label>
                    <i class="ri-eye-off-line login__eye" id="login-eye"></i>
                </div>
            </div>
        </div>

        <div class="login__check">
            <div class="login__check-group">
                <input asp-for=RememberMe class="login__check-input" >
                <label asp-for=RememberMe class="login__check-label">Remember me</label>
            </div>

            <a asp-action="ForgotPassword" asp-controller="Account" class="login__forgot">Forgot Password?</a>
        </div>

        <button type="submit" class="login__button">Login</button>

        <p class="login__register">
            Don't have an account? <a asp-action="Register" asp-controller="Account">Register</a>
        </p>
    </form>
</div>
